<h1>Burgers</h1>

<h2>Order</h2>

<ul>
    {{#each burgers}}
        {{#unless devoured}}
           <li>{{burger_name}}
               	<button class="changeDevour" data-id="{{id}}">
		            Devour!
	            </button>
           </li> 
        {{/unless}}
    {{/each}}
</ul>

<h2>Devoured</h2>

<ul>
    {{#each burgers}}
        {{#if devoured}}
            <li>{{burger_name}}</li>
        {{/if}}
    {{/each}}
</ul>

<h2>Order a burger</h2>
<form class="create-form">

    <div class="form-group">
        <label for="burger">Burger Name:</label>
        <input type="text" id="burger" name="name">
    </div>

    <button type="submit">Order</button>
</form>
